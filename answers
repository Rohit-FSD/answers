ANS 6:--
code:
#include<stdio.h>
int fib(int n)
{
   if (n <= 1)
      return n;
   return fib(n-1) + fib(n-2);
}
 
int main ()
{
  int n;
  printf("\nEnter the number :");
  scanf("%d",&n);
  printf("\n%d", fib(n));
  return 0;
}
